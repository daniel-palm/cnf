[module/pulseaudio-control]
type = custom/script
tail = true
label-font = 3
exec = /usr/local/bin/pulseaudio-control.bash --icons-volume "üîâ ,üîä " --icon-muted "üîá " --sink-nickname "alsa_output.pci-0000_00_1f.3-platform-skl_hda_dsp_generic.HiFi__hw_sofhdadsp__sink:[üìª]" --sink-nickname "alsa_output.usb-Logitech_G733_Gaming_Headset-00.analog-stereo:[üéß]" --sink-nickname "alsa_output.pci-0000_00_1f.3-platform-skl_hda_dsp_generic.HiFi__hw_sofhdadsp_4__sink:[monitor]" listen
click-right = exec pavucontrol &
click-left = ~/.config/polybar/scripts/pulseaudio-control.bash togmute
click-middle = ~/.config/polybar/scripts/pulseaudio-control.bash next-sink
scroll-up = ~/.config/polybar/scripts/pulseaudio-control.bash up
scroll-down = ~/.config/polybar/scripts/pulseaudio-control.bash down
