## ==== BASEMODULE ====
[module/basemodule]
format-prefix-font = 2
format = <label>
label-font = 3
label-padding = 2
interval = 1
label = "%output%"

[module/baseicon]
type = custom/text
content-padding = 2
content-foreground = #050505
content-background = #B9979C

